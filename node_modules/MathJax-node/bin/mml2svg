var typeset = require("../lib/mj-single.js").typeset;

if (process.argv.length !== 3) {
  console.error("Usage: mml2svg 'math' > file.svg");
  process.exit(1);
}

typeset({math:process.argv[2], format:"MathML", svg:true, img:true}, function (data) {
  if (!data.errors) {console.log(data.svg)}
});
